@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-secondary">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td><a class="card-link" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Details</a></td>
            <td><a class="card-link" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit</a></td>
        </tr>
    }
</table>

<a asp-page='.\Edit' class="btn btn-primary">Add New</a>



